<div class="title-container text-light">
	<h1>Login</h1>
</div>

<%= form_with url: login_path do |form| %>
   	<fieldset>
   		<div class="form-group text-light">
		   	<%= form.label :username%><br>
		  
			<%= form.text_field :username, class: "form-control"%><br>
		  
		  	<%= form.label :password%><br>
		  
		  	<%= form.password_field :password, class: "form-control"%><br>
		  
		  	<div class="actions">
		  		<%= form.submit "Login" %>
		  	</div>
	  	</div>
  	</fieldset>
<%end%>

<%= link_to "Register", new_user_path %>
